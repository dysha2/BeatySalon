<Window x:Class="BeatySalon.Views.MessageBox.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatySalon.Views.MessageBox"                         
        xmlns:VM="clr-namespace:BeatySalon.ViewModels"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance {x:Type VM:MessageVM}}"
        Title="{Binding Title}" Height="150" Width="600" ResizeMode="NoResize" Style="{StaticResource WinAll}" Name="MessageWindow">

    <Window.Resources>
        <DataTemplate x:Key="ButtonTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Height="50" Command="{Binding Close}" Content="ОК" CommandParameter="{Binding ElementName=MessageWindow}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Message}" TextWrapping="WrapWithOverflow" Margin="10"/>

        <ContentControl ContentTemplate="{StaticResource ButtonTemplate}" Grid.Row="1" Height="Auto" Width="Auto">
           

        </ContentControl>
    </Grid>
</Window>
